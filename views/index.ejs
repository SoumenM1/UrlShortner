<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Url Shortner</title>
</head>
<body>


 <div class="container">  
<h1 class="mt-4">URL Shrinker</h1>
<form action="/shortsUrls" method="POST" class="my-4 form-inline">
<label for="fullUrl" class="sr-only"></label>
<input type="url" placeholder="Url"  name="fullUrl" id="fullUrl" class="form-control mr-2" required>
<button class="btn btn-success mt-2" type="submit">Shrink</button>

</form>

<table class="table table-striped table-resposive">
<thead>
  <tr>
    <th>Full URL</th>
    <th>Short URL</th>
    <th>Clicks</th>
  </tr>  
</thead>
<tbody>
    <% shortUrls.forEach(shortUrl => { %>
    <tr>
        <td><a style="color:#3300ff;" href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
        <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %> </a></td>
        <td><%= shortUrl.clicks %></td>
    </tr>

    <% }) %>


  

</tbody>

</table>

</div> 
</body>
</html>